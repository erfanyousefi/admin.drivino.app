<div class="container">
    <div class="row pt-5 justify-content-center">
        <div class="col-8">
            <div class="card card-default">
                <div class="card-header"><h5>ورود</h5></div>
                <div class="card-body">
                    <form class="form-horizontal" role="form" method="POST" action="/auth/login" novalidate>

                        <%- include(viewPath('layouts/error-messages')) -%>

                        <div class="form-group">
                            <label for="email" class="control-label">ایمیل</label>
                            <input id="email" type="email" class="form-control" name="email" value="" required autofocus="">
                        </div>

                        <div class="form-group">
                            <label for="password" class="control-label">پسورد</label>
                            <input id="password" type="password" class="form-control" name="password" required>
                        </div>

                        <div class="form-group">
                            <div class="checkbox">
                                <input type="checkbox" name="remember">
                                <label for="remember" class="control-label">
                                    یادآوری ورود
                                </label>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                ورود
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
